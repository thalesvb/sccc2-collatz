{
    "opts": {
        "destination": "./docs/",
        "package": "package.json",
        "recurse": true,
        "readme": "README.md"
    },
    "source": {
        "include": ["."],
        "exclude": [
            "docs",
            "node_modules"
        ]
    },
    "plugins": [
        "plugins/markdown"
    ],
    "templates": {
        "cleverLinks": true,
        "default": {
            "includeDate": false,
            "outputSourceFiles": false
        }
    }
}